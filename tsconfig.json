{
  "compilerOptions": {
    "target": "ES2019",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitReturns": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@utils*": ["src/utils*"],
      "@components*": ["src/components*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "./scripts", "./test"],
  "exclude": ["node_modules", "dist", ".next", "next.config.js"],
  "files": ["./hardhat.config.ts"]
}
